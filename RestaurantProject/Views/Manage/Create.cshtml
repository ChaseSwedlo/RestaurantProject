@model PromotionViewModel;

<h2 class="display-5 text-center">Create Promotion</h2>

@using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "m-center-form" })) {
    <div class="form-group">
        @Html.TextBoxFor(m => m.Image, new { @placeholder = "Image URL", @class = "form-control m-text-input" })
        @Html.ValidationMessageFor(m => m.Image, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.TextBoxFor(m => m.Name, new { @placeholder = "Name", @class = "form-control m-text-input" })
        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.TextBoxFor(m => m.Description, new { @placeholder = "Description", @class = "form-control m-text-input" })
        @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.TextBoxFor(m => m.Discount, new { @placeholder = "Discount", @class = "form-control m-text-input" })
        @Html.ValidationMessageFor(m => m.Discount, "", new { @class = "text-danger" })
    </div>
    <div class="form-group m-date-time">
        @Html.TextBoxFor(m => m.DateTime, "{0:yyyy-MM-ddTHH:mm}", new { @type = "datetime-local", @class = "form-control m-text-input" })
        @Html.ValidationMessageFor(m => m.DateTime, "", new { @class = "text-danger" })
    </div>
    <button type="submit" class="btn btn-primary">Add</button>
}
