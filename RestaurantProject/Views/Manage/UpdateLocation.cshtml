@model Location;

<div class="create-page">
    <div>
        <h2 class="display-5 text-center">Update Location</h2>
        @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "m-center-form" })) {
            <div class="form-group">
                @Html.LabelFor(m => m.Image, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Image, new { @class = "form-control m-text-input" })
                @Html.ValidationMessageFor(m => m.Image, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Name, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control m-text-input" })
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Address, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Address, new { @class = "form-control m-text-input" })
                @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })
            </div>

            @Html.HiddenFor(m => m.LocationId)
            <button type="submit" class="btn btn-primary">Update</button>
        }
    </div>
</div>
